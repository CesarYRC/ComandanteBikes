@page "/inventarioTienda/nueva"
@page "/inventarioTienda/editar/{Id:int}"
@rendermode InteractiveServer
@inject NavigationManager _navigator;
@inject IRepositorioInventarioTienda _repositorio;

<h1>@_mensaje Inventario Tienda</h1>
<EditForm Model="_inventarioTienda" FormName="frmInventarioTienda" OnValidSubmit="Guardar">
    <DataAnnotationsValidator />

    <div class="row mb-3">
        <label for="txtModeloInventario" class="col-2 col-form-label">Modelo</label>
        <div>
            <InputText id="txtModeloInventario" class="form-control" @bind-Value="_inventarioTienda.ModeloInventario" />
            <ValidationMessage For="()=>_inventarioTienda.ModeloInventario" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="txtColorInventario" class="col-2 col-form-label">Color</label>
        <div>
            <InputText id="txtColorInventario" class="form-control" @bind-Value="_inventarioTienda.ColorInventario" />
            <ValidationMessage For="()=>_inventarioTienda.ColorInventario" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="txtPrecioInventario" class="col-2 col-form-label">Precio</label>
        <div>
            <InputText id="txtPrecioInventario" class="form-control" @bind-Value="_inventarioTienda.PrecioInventario" />
            <ValidationMessage For="()=>_inventarioTienda.PrecioInventario" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="txtTallaInventario" class="col-2 col-form-label">Talla</label>
        <div>
            <InputText id="txtTallaInventario" class="form-control" @bind-Value="_inventarioTienda.TallaInventario" />
            <ValidationMessage For="()=>_inventarioTienda.TallaInventario" />
        </div>
    </div>

    <div class="row mb-3">
        <label for="txtCantidadTotal" class="col-2 col-form-label">Cantidad Total</label>
        <div>
            <InputText id="txtCantidadTotal" class="form-control" @bind-Value="_inventarioTienda.CantidadTotal" />
            <ValidationMessage For="()=>_inventarioTienda.CantidadTotal" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <button class="btn btn-danger ms-3" @onclick="Cancelar" @onclick:preventDefault>Cancelar</button>
</EditForm>

@code {
    [Parameter]
    public int Id { get; set; }
    private string _mensaje = "";
    private InventarioTienda? _inventarioTienda = new();
    

    protected override async Task OnInitializedAsync()
    {
        if (Id > 0)
        {
            _inventarioTienda = await _repositorio.Get(Id);
            _mensaje = "Modificar";
        }
        else
        {
            _mensaje = "Nuevo";
        }
    }

    private async void Guardar()
    {
        if (Id > 0)
        {
            await _repositorio.Update(Id, _inventarioTienda!);
        }
        else
        {
            await _repositorio.Add(_inventarioTienda!);
        }
        Cancelar();
    }

    private void Cancelar()
    {
        _navigator.NavigateTo("/registroInventarioTienda");
    }
}